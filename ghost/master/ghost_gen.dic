GhostIdeaGenerator : nonoverlap
{
	"%(an(thing)) that %(feature), and %(and)"
	"%(an(thing)) that %(feature), but %(but)"
	"%(an(thing)) that %(feature)"
	"%(an(thing)) that always %(always), and %(feature)"
	"%(an(thing)) that %(feature('but')), but it never %(never)"
}

