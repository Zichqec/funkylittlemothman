feature{"\![embed,OnGhostGen.Feature,%(_argv[0])]"}
and{"\![embed,OnGhostGen.And]"}
object{"\![embed,OnGhostGen.Object]"}
always{"\![embed,OnGhostGen.Always]"}
never{"\![embed,OnGhostGen.Never]"}
but{"\![embed,OnGhostGen.But]"}

